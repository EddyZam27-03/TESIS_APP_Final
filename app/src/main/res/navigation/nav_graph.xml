<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ensenando.ui.home.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/activityFragment"
        android:name="com.example.ensenando.ui.activity.ActivityFragment"
        android:label="Actividad"
        tools:layout="@layout/fragment_activity">
        <argument
            android:name="idGesto"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ensenando.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/logrosFragment"
        android:name="com.example.ensenando.ui.logros.LogrosFragment"
        android:label="Logros"
        tools:layout="@layout/fragment_logros" />

    <fragment
        android:id="@+id/buscarDocenteFragment"
        android:name="com.example.ensenando.ui.buscar.BuscarDocenteFragment"
        android:label="Buscar Docente"
        tools:layout="@layout/fragment_buscar_docente" />

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.ensenando.ui.admin.AdminFragment"
        android:label="Administración"
        tools:layout="@layout/fragment_admin" />

    <activity
        android:id="@+id/cameraActivity"
        android:name="com.example.ensenando.ui.camera.CameraActivity"
        android:label="Cámara" />

</navigation>

